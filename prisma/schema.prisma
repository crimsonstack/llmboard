// Prisma schema for MySQL JSON snapshot persistence
// Run: npx prisma generate
//      npx prisma migrate dev --name init (optional if using Prisma migrations)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @db.VarChar(191)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("rooms")
}

model GameState {
  roomId    String   @id @db.VarChar(191) @map("room_id")
  state     Json     @db.Json
  version   Int
  setupId   String?  @db.VarChar(191) @map("setup_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("game_states")
}

model GameSetup {
  id          String   @id @db.VarChar(191)
  name        String   @db.VarChar(191)
  description String?  @db.Text
  data        Json     @db.Json
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("game_setups")
}
